---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Landing Page Copy",
    description: "Persuasive pages that convert visitors into customers.",
    icon: "bx:bxs-briefcase",
  },
  {
    title: "Email Sequences",
    description: "Engaging campaigns to nurture and retain users.",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "Case Studies",
    description: "Stories that build trust and showcase your results.",
    icon: "bx:bxs-data",
  },
  {
    title: "Messaging & Positioning",
    description: "Clear brand messaging that resonates with your audience.",
    icon: "bx:bxs-bot",
  },
  {
    title: "Conversion Optimization",
    description: "Copy that guides users to take action.",
    icon: "bx:bxs-file-find",
  },
  {
    title: "Consulting & Feedback",
    description: "Strategic advice on messaging, tone, and UX copy.",
    icon: "bx:bxs-user",
  },
];

---

<div class="mt-16 md:mt-24">
  <h2 class="text-4xl lg:text-5xl font-bold text-center lg:tracking-tight">
    How I Can Help Your SaaS
  </h2>
  <p class="text-lg mt-4 text-slate-600 text-center max-w-3xl mx-auto">
    Clear messaging, persuasive copy, and conversion-focused writing that drives results.
  </p>

  <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-10 mt-12">
    {features.map((item) => (
      <div class="flex flex-col items-center bg-white p-6 rounded-xl shadow-sm hover:shadow-lg transition text-center">
        <div class="bg-indigo-600 text-white p-4 rounded-full mb-4 inline-flex">
          <Icon class="w-6 h-6" name={item.icon} />
        </div>
        <h3 class="text-xl font-semibold mb-2">{item.title}</h3>
        <p class="text-gray-600 leading-relaxed">{item.description}</p>
      </div>
    ))}
  </div>
</div>

