---
import Contactform from "@/components/contactform.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
  <Container>
    <!-- Section Header -->
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">We are here to help.</Fragment>
    </Sectionhead>

    <!-- Main Grid -->
    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <!-- Left Column: Contact Info -->
      <div class="space-y-5">
        <h2 class="font-medium text-2xl text-gray-800">Contact Astroship</h2>
        <p class="text-lg leading-relaxed text-slate-500">
          Have something to say? Fill out the form, send an email, or give us a
          call.
        </p>

        <div class="space-y-2">
          <!-- Address -->
          <div class="flex items-center space-x-2 text-gray-600">
            <span class="text-gray-400 text-[16px]">
              <Icon name="uil:map-marker" />
            </span>
            <span>1734 Sanfransico, CA 93063</span>
          </div>

          <!-- Email -->
          <div class="flex items-center space-x-2 text-gray-600">
            <span class="text-gray-400 text-[16px]">
              <Icon name="uil:envelope" />
            </span>
            <a href="mailto:hello@astroshipstarter.com" class="hover:underline">
              hello@astroshipstarter.com
            </a>
          </div>

          <!-- Phone -->
          <div class="flex items-center space-x-2 text-gray-600">
            <span class="text-gray-400 text-[16px]">
              <Icon name="uil:phone" />
            </span>
            <a href="tel:+19874587899" class="hover:underline">
              +1 (987) 4587 899
            </a>
          </div>
        </div>
      </div>

      <!-- Right Column: Contact Form -->
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
