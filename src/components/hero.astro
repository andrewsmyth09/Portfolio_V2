---
import { Picture } from "astro:assets";
import heroImage from "@/assets/Andrew.png";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main class="grid lg:grid-cols-[2fr_1fr] items-center max-w-7xl mx-auto px-6 py-16 gap-8">
  <!-- Text Section -->
  <div>
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Copy That Drives SaaS Growth
    </h1>
    <p class="text-lg mt-6 text-slate-600 max-w-2xl leading-relaxed">
      I help early-stage and funded SaaS startups turn features into benefits, 
      craft messaging that resonates, and write copy that converts browsers 
      into users â€” and users into loyal customers.
    </p>
    <div class="mt-8 flex flex-col sm:flex-row gap-4">
      <Link
        href="https://calendly.com/YOUR-CALENDLY-USERNAME/15min"
        target="_blank"
        class="flex gap-2 items-center justify-center bg-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:calendar" />
        Book a 15-Minute Call
      </Link>

      <Link
        href="/portfolio"
        class="flex gap-2 items-center justify-center border border-slate-300 text-slate-800 px-6 py-3 rounded-lg font-semibold hover:bg-slate-100 transition"
        rel="noopener">
        <Icon class="w-5 h-5" name="bx:bxs-briefcase" />
        View My Work
      </Link>
    </div>
  </div>

  <!-- Image Section -->
  <div class="hidden md:block justify-self-end">
    <Picture
      src={heroImage}
      alt="Professional SaaS copywriter"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
      class="rounded-2xl shadow-lg max-w-sm h-auto"
    />
  </div>
</main>
